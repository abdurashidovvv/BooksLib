<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:padding="30dp"
    android:backgroundTint="#E3E8ED">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/book_list_item_image"
            android:layout_width="120dp"
            android:layout_height="130dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/picturebank"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/book_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank 4.0"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/book_list_item_image"/>
        <TextView
            android:id="@+id/book_list_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brett King"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/book_list_item_name"/>
        <ImageView
            android:id="@+id/rating_img"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/star_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/book_list_item_author"/>
        <ImageView
            android:id="@+id/heart_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/heart_ic"
            app:layout_constraintTop_toBottomOf="@id/rating_img"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="#8D969F"
            android:textSize="10sp"
            android:layout_marginStart="3dp"
            app:layout_constraintLeft_toRightOf="@id/heart_img"
            app:layout_constraintTop_toTopOf="@id/heart_img"
            app:layout_constraintBottom_toBottomOf="@id/heart_img"/>
        <ImageView
            android:id="@+id/book_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/book_ic"
            app:layout_constraintTop_toBottomOf="@id/rating_img"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="#8D969F"
            android:textSize="10sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintRight_toLeftOf="@id/book_img"
            app:layout_constraintTop_toTopOf="@id/book_img"
            app:layout_constraintBottom_toBottomOf="@id/book_img"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>